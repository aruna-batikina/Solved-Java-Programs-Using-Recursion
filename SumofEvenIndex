class Main{
public static void arrayEven(int a[],int sum,int max,int i){
if(i<a.length){
if(i%2==0)
sum=sum+a[i];
if(max<a[i])
max=a[i];
arrayEven(a,sum,max,i+1);
}
else{
System.out.println("Sum of the even indexes:"+sum);
System.out.println("max number in the array :"+max);
}
}
public static void main(String args[]){
int a[]={10,15,14,45,18,47,88};
int sum=0,max=0;
arrayEven(a,sum,max,0);
}
}
